{
    "name": "middlewares/filesystem",
    "type": "library",
    "description": "Middleware to save or read responses using Flysystem",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "filesystem",
        "flysystem",
        "cache"
    ],
    "homepage": "https://github.com/middlewares/filesystem",
    "support": {
        "issues": "https://github.com/middlewares/filesystem/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.4",
        "middlewares/utils": "~0.8",
        "league/flysystem": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix ."
    }
}